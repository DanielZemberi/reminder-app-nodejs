{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es5", "es6", "dom", "es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "./bin",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@handler/*": ["handler/*"],
      "@controller/*": ["controller/*"],
      "@exception/*": ["exception/*"],
      "@middleware/*": ["middleware/*"],
      "@services/*": ["services/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@constants/*": ["data/constants/*"]
    }
  }
}
